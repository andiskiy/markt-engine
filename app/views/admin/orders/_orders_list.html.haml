%table.table.table-striped
  %thead
    %tr
      %th
        = t('admin.order.attributes.item')
      %th
        = t('admin.order.attributes.price')
      %th
        = t('admin.order.attributes.quantity')
  %tbody
  - orders.each do |order|
    %tr
      %td.text-truncate.mw-responsive
        = order_item(order.with_deleted_item, purchase)
      %td= order.with_deleted_item.old_price(purchase.ordered_date)
      %td= order.quantity

.text-center
  .inline-block
    = will_paginate(orders, renderer: WillPaginate::ActionView::BootstrapLinkRenderer)
