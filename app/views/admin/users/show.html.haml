- page_cols(md: 12, lg: 8)
- title(@user.full_name)

.modal-header
  %h3.inline-block= @user.full_name
  .text-right
    %a.cursor.close{ data: { dismiss: 'modal' } }Ã—
.card
  .card-body
    .row.mt-3
      .col-md-8.address
        %i.fas.fa-map-marker-alt
        = @user.full_address
      .col-sm-4.contact-info
        %ul.list-unstyled
          - if @user.phone.present?
            %li
              %i.fas.fa-phone
              %small
                = @user.phone
          - if @user.email.present?
            %li
              %i.fas.fa-envelope
              %small
                = @user.email
          %li
            %i.fas.fa-user
            %small
              = t("admin.user.roles.#{@user.role}")
