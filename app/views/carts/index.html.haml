.page_head
  .row
    .col-sm-4= link_to t('cart.actions.go_to_main'), root_path, class: 'header-actions'
    .col-sm-4
      %center
        = t('cart.titles.index')
    .col-sm-4
      .payment-button
        = pay_url 'Payment', @purchase.id, @purchase.amount
.content
  .items-list
    - if @orders.present?
      .row
        - @orders.each do |order|
          .col-sm-4
            .item
              .row
                .col-sm-2
                .col-sm-8
                  .item-header= order.item.name
                .col-sm-2
                  = link_to order_path(order), method: :delete, class: 'item-close' do
                    .far.fa-times-circle
              .item-photo
                .fas.fa-images
                = t('item.messages.no_image')
              .item-price $#{order.item.price}
    - else
      %center
        .notice-info
          .fas.fa-exclamation-circle
          = t('cart.messages.no_items')
