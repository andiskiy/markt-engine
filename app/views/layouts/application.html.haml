!!!
%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv': 'Content-Type' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1, user-scalable=no' }
    %title MarkEngine
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Oswald:200,300,400|PT+Sans+Narrow|Yanone+Kaffeesatz'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body{ data: { page: controller_name.camelize + action_name.camelize, controller: body_controller } }
    = render 'partials/main_navbar'
    - if @categories
      = render 'partials/categories'
    - else
      .container
        = render 'partials/flash'
        = yield

    = yield :modals if content_for? :modals
