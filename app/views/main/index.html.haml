.col-sm-12
  .page_head
    = t('item.titles.index')
  .items-list
    .row
      - @items.each do |item|
        .col-sm-4
          .item
            .item-header
              = item.name
            .item-photo
              - if item.item_photos.present?
                = image_tag item.item_photos.first.photo.thumb.url
              - else
                .fas.fa-images
                = t('item.messages.no_image')
            .item-price
              = t('item.helpers.price', price: item.price)
            = link_to orders_path(item_id: item.id), method: 'POST' do
              .item-button
                .fas.fa-cart-plus
                = t('item.actions.add_to_cart')
