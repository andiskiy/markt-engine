- page_cols(sm: 12, lg: 6, xl: 5)
- title(t('user.titles.resend_confirm_instructions'))

.shadow-sm.auth-form
  %h2= title(t('user.titles.resend_confirm_instructions'))
  = simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
    = f.error_notification
    = f.full_error :confirmation_token
    .form-inputs
      = f.input :email, required: true, autofocus: true
    .form-actions.text-center
      = f.button :submit, t('user.actions.resend_confirm_instructions'), class: 'btn auth-btn-primary'
  .text-center.mt-3
    = render 'users/shared/links'
